/**
 * @param $id
 * @return mixedImplement hook_entity_load
 * Order_load
 */
function tables_load($id)
{
  $entity = tables_load_multiple(array($id));
  return reset($entity);
}

/**
 * Implements cook table Load Multiple
 * @Param $ids = array();
 */
function tables_load_multiple($ids)
{
  return entity_load('tables', $ids);
}

