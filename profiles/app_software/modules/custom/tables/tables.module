/**
 * Implement check exit cook table
 */
function tables_get_tables($field, $value)
{
  $query = db_select('tables', 'd');
  $query->fields('d');
  $query->condition($field, $value, '=');
  $result = $query->execute()->fetchAll();
  if ($result) {
    return $result;
  } else {
    return false;
  }
}

