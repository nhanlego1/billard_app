/**
 * Implement check exit cook table
 */
function staff_get_staff($field, $value)
{
  $query = db_select('staff', 'd');
  $query->fields('d');
  $query->condition($field, $value, '=');
  $result = $query->execute()->fetchAll();
  if ($result) {
    return $result;
  } else {
    return false;
  }
}

