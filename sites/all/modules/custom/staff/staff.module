/**
 * Implement get all staff
 */
function staff_get_staff_list(){
  $query = db_select('staff','st');
  $query->fields('st');
  $query->orderBy('name','ASC');
  $result = $query->execute()->fetchAll();
  $data = array();
  $data[''] = t('Không có nhân viên');
  if($result){
    foreach($result as $staff){
      $data[$staff->id] = $staff->name;
    }
  }
  return $data;
}